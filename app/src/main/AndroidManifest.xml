<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aden.radq">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_initials"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <!-- Camera Activity -->
        <activity
            android:name=".CameraActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeBlackActionBar"
            android:parentActivityName=".MainActivity"
            android:label="">
        </activity>

        <!-- Alarms Activity -->
        <activity
            android:name=".AlarmsActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            android:label="@string/alarms_title">
        </activity>

        <!-- Notifications Activity -->
        <activity
            android:name=".NotificationsActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            android:label="@string/notifications_title">
        </activity>

        <!--Settings Activity-->
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            android:label="@string/settings_title">
        </activity>

        <!--Emergency Activity-->
        <activity
            android:screenOrientation="landscape"
            android:name=".EmergencyActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".CameraActivity"
            android:label="@string/emergency_title">
        </activity>

        <!-- Contact Activity -->
        <activity
            android:name=".ContactActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".SettingsActivity"
            android:label="@string/contact_title">
        </activity>

        <!-- Loading Activity -->
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>